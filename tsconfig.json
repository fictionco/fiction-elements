{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "playground/**/*",
    "*.config.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "dist",
    "node_modules"
  ]
}
